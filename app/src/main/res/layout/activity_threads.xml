<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="18dp"
    android:padding="20dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/button_back"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Threads"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <LinearLayout
        android:id="@+id/xx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivBack"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Picture Evidence"
            android:textStyle="bold"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/x"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/xx">

        <ImageView
            android:id="@+id/ivAddImage"
            android:scaleType="fitXY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/add_foto"/>


        <ImageView
            android:id="@+id/ivClearImage"
            android:visibility="gone"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/baseline_cancel_24"/>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/aa"
        android:orientation="vertical"
        android:layout_below="@+id/x"
        android:layout_marginTop="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Judul"
            android:textStyle="bold"/>

        <EditText
            android:layout_marginTop="2dp"
            android:id="@+id/etTitleReport"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:paddingHorizontal="10dp"
            android:inputType="text"
            android:background="@drawable/rounded_threads"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kronologi Singkat"
            android:textStyle="bold"
            android:layout_marginTop="5dp"/>
        <EditText

            android:layout_marginTop="2dp"
            android:id="@+id/etShortDescription"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:paddingHorizontal="10dp"
            android:background="@drawable/rounded_threads"
            android:inputType="text"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/aa">

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deskripsi"
            android:textStyle="bold"/>
        <ImageView
            android:layout_marginTop="2dp"
            android:id="@+id/ivText"
            android:layout_below="@+id/tvDescription"
            android:layout_width="334dp"
            android:layout_height="150dp"
            android:background="@drawable/rounded_threads"/>
        <EditText
            android:id="@+id/etDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="Apa yang sedang anda alami?...."
            android:paddingHorizontal="10dp"
            android:layout_marginTop="25dp"
            android:layout_alignParentStart="true"
            android:inputType="text"
            android:paddingLeft="20dp"/>

        <TextView
            android:id="@+id/tvText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivText"
            android:text="Do not exceed 120 characters when entering\nthe report description."
            android:layout_marginTop="5dp"/>

    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnAddThreads"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_alignParentBottom="true"
        android:text="Add"
        android:textColor="@color/white"
        android:background="@drawable/rounded_button"/>

</RelativeLayout>
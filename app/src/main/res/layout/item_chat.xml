<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp">

    <LinearLayout
        android:id="@+id/llReceiver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="100dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:background="@drawable/receive_drawable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:scaleType="centerCrop"
                android:visibility="gone"
                app:srcCompat="@drawable/avatar" />

            <TextView
                android:id="@+id/tvChatReceiver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hallo sdjodsjfosdi oi josdijvosijo josidvjodsivjdvijsoij dosijsdoivjodsivjsdoivjodijsoivj sdoifjsdoj"
                android:padding="10dp"
                android:textColor="@color/white"
                android:textSize="17sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvTimeReciver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            tools:text="12 September 2023 10 PM"
            android:fontFamily="@font/nunito_regular"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_gravity="end"
        android:id="@+id/llSender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="12dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_gravity="end"
            android:background="@drawable/sent_drawable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:scaleType="centerCrop"
                android:visibility="gone"
                app:srcCompat="@drawable/avatar" />

            <TextView
                android:id="@+id/tvChatSender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Babi Kau xdofjsdoj oiujsdovuj oudjfoiusdhjvoisudfo idsufhsiduhfisudhfidsuhfisduhfisduhfisduhfisudsidufhiduhfsiuhfisduhfsiduhfu"
                android:textColor="#FFFFFF"
                android:textSize="17sp" />

        </LinearLayout>


        <TextView
            android:id="@+id/tvTimeSender"
            android:layout_gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="15dp"
            android:layout_marginTop="5dp"
            tools:text="12 September 2023 10 PM"
            android:fontFamily="@font/nunito_regular"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>